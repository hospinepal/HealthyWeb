' Gambas class file

Private $sLink As String
Private $encid As String

Public Sub _new(sLink As String, sLock As Boolean, encid As String)

  $sLink = sLink
  $encid = encid
  If sLock = True Then
    btnprint.Enabled = False
    btnpdf.Enabled = False
    btnarchive.Enabled = False
    btnprintarch.Enabled = False
  Else
    If $encid Then
      btnarchive.Enabled = True
      btnprintarch.Enabled = True

      If modBasic.$WebViewFunction Then
        If modBasic.$WebViewFunction = "Print" Then
          btnprint.Enabled = True
          btnpdf.Enabled = False
          btnarchive.Enabled = False
          btnprintarch.Enabled = False
        Else If modBasic.$WebViewFunction = "PDF" Then
          btnprint.Enabled = False
          btnpdf.Enabled = True
          btnarchive.Enabled = False
          btnprintarch.Enabled = False
        Else If modBasic.$WebViewFunction = "Archive" Then
          btnprint.Enabled = False
          btnpdf.Enabled = False
          btnarchive.Enabled = True
          btnprintarch.Enabled = False
        Else If modBasic.$WebViewFunction = "Print/Archive" Then
          btnprint.Enabled = False
          btnpdf.Enabled = False
          btnarchive.Enabled = False
          btnprintarch.Enabled = True
        Endif
      Endif

    Endif
  Endif

End

Public Sub Form_Open()

  Inc Application.Busy
  WebView1.Url = $sLink
  If modBasic.$WebZoomValue Then
    Slider1.Value = modBasic.$WebZoomValue * 100
    WebView1.Zoom = Slider1.Value / 100
  Endif
  Dec Application.Busy

End

Public Sub WebView1_Load()

  WebView1.Enabled = True

End

Public Sub Slider1_Change()

  Inc Application.Busy
  WebView1.Zoom = Slider1.Value / 100
  Dec Application.Busy

End

Public Sub btnprint_Click()

  Dim sPath As String
  Dim xLink As String
  Dim i As Integer

  xLink = Replace($sLink, "file://", "")
  sPath = modPrint.ConvertHTMLToPDFString(xLink, "ReportSize")
  If txtprintcount.Value Then
    For i = 0 To txtprintcount.Value - 1
      modPrint.DefaultPrinting(sPath, "ReportSize")
    Next
  Endif

End

Public Sub btnpdf_Click()

  Dim sPath As String
  Dim xLink As String

  xLink = Replace($sLink, "file://", "")
  sPath = modPrint.ConvertHTMLToPDFString(xLink, "ReportSize")
  Desktop.Open(sPath)

End

Public Sub btnarchive_Click()

  Dim astr As String
  Dim sLongID As Long
  Dim sPath As String
  Dim xLink As String

  astr = InputBox("Provide Title of the Report to archive", "Report Archiving", "")
  If astr Then
    xLink = Replace($sLink, "file://", "")
    Inc Application.Busy
    sPath = modPrint.ConvertHTMLToPDFString(xLink, "ReportSize")
    sLongID = modImage.SavePatientFileGeneral($encid, "General Reports", astr, sPath, False, modReportVar.$ReportHash)                       ''
    Dec Application.Busy
  Endif

End

Public Sub btnprintarch_Click()

  Dim astr As String
  Dim sLongID As Long
  Dim sPath As String
  Dim xLink As String
  Dim i As Integer

  astr = InputBox("Provide Title of the Report to archive", "Report Archiving", "")
  If astr Then
    xLink = Replace($sLink, "file://", "")
    Inc Application.Busy
    sPath = modPrint.ConvertHTMLToPDFString(xLink, "ReportSize")
    sLongID = modImage.SavePatientFileGeneral($encid, "General Reports", astr, sPath, False, modReportVar.$ReportHash)                       ''
    Dec Application.Busy
    If txtprintcount.Value Then
      For i = 0 To txtprintcount.Value - 1
        modPrint.DefaultPrinting(sPath, "ReportSize")
      Next
    Endif
  Endif

End
