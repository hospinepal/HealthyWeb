' Gambas class file

Private $sValue As String
Private $RefNo As String

Public Sub Run(sMessage As String, Optional sButton As String[], Optional sImage As String, Optional RefNo As String) As String

  txtMessage.Text = sMessage
  If RefNo Then
    $RefNo = RefNo
    btnkyc.Visible = True
  Else
    $RefNo = ""
  Endif
  If sImage Then
    picMessage.Image = modPrint.GetFileWebURL(sImage)
  Else
    picMessage.Image = "icon:/huge/help"
  Endif
  If sButton Then
    If sButton.Count = 1 Then
      Button3.Text = sButton[0]
      Button3.SetFocus
    Else If sButton.Count = 2 Then
      Button3.Text = sButton[0]
      Button2.Text = sButton[1]
      Button2.Visible = True
      Button2.SetFocus
    Else If sButton.Count = 3 Then
      Button3.Text = sButton[0]
      Button2.Text = sButton[1]
      Button1.Text = sButton[2]
      Button2.Visible = True
      Button1.Visible = True
      Button1.SetFocus
    Endif
  Else
    Button3.SetFocus
  Endif
  modGeneralMain.GetOpenModalForm(Me)
  If Me.ShowModal() Then Return $sValue

End

Public Sub btnGroup_Click()

  $sValue = Last.Text
  Me.Close(True)

End

Public Sub btnkyc_Click()

  Dim hCKyc As CssfAPIKyc

  hCKyc = New CssfAPIKyc($RefNo)

End
